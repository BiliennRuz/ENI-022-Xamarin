<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeteoForms.MainPage"
             Title="Météo">

    <StackLayout Spacing="0">

     
        <StackLayout BackgroundColor="BlanchedAlmond" Padding="20" Orientation="Horizontal">
            <Entry Placeholder="Entrez une ville" x:Name="EntryCity" HorizontalOptions="FillAndExpand" BackgroundColor="White"/>

            <Button Text="OK" Clicked="Button_Clicked" Style="{DynamicResource ButtonTitle}"/>
        </StackLayout>

        <StackLayout Spacing="16" Margin="0,15,0,0">
            <Label x:Name="LabelCity" Text="Ville" HorizontalOptions="Center"/>
            <Label x:Name="LabelTemperature" Text="Température" HorizontalOptions="Center"/>
            <Image x:Name="ImageIcon" HorizontalOptions="Center"/>
        </StackLayout>

        <Button Text="Aller sur la seconde page" VerticalOptions="EndAndExpand" Clicked="Button_Clicked_1" />

    </StackLayout>

</ContentPage>
